{
	// Place your snippets for plaintext here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	
	"Date": {
		"prefix": "date",
		"body": [
			"############----------------------------------------------############",
			"${CURRENT_MONTH}.${CURRENT_DATE}.${CURRENT_YEAR}",
			"############----------------------------------------------############",
		],
		"description": "Enter date of your own format. Preference: MMM-DD-YYYY"
	}

	"Title": {
		"prefix": "title",
		"body": [
			"======================================================================",
			"# $0",
			"======================================================================",
		],
		"description": "Enter title/subtitle"
	}

	"Note1": {
		"prefix": "note1",
		"body": [
			"-> $0",
		],
		"description": "Indentation Level 1"
	}

	"Note2": {
		"prefix": "note2",
		"body": [
			"/t-> $0",
		],
		"description": "Indentation Level 2"
	}

	"Note3": {
		"prefix": "note3",
		"body": [
			"/t/t-> $0",
		],
		"description": "Indentation Level 3"
	}
}