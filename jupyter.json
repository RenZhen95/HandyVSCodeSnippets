{
	// Place your snippets for python here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	
	"Title": {
        "prefix": "title",
		"body": [
			"############--------------------------------############",
			"# $0",
	 		"############--------------------------------############"
		],
		"description": "Headings for title in python code"
	}

	"Heading": {
        "prefix": "heading",
		"body": [
			"#=======================================================",
			"# $0",
			"#=======================================================", 
		],
		"description": "Headings for subtitles in python code"
	}

	"Date": {
        "prefix": "date",
		"body": [
			"# |${CURRENT_DATE} ${CURRENT_MONTH_NAME_SHORT} ${CURRENT_YEAR_SHORT}|",
		],
		"description": "Inserts current date"
	}

	"Author": {
        "prefix": "author",
		"body": [
			"# Author: 	Liaw Jin Cheng",
			"# Email: 	j-liaw@hotmail.com",
		],
		"description": "Inserts author and email"
	}

	"Note_Level1": {
        "prefix": "note1",
		"body": [
			"#\t-> $0",
		],
	}

	"Note_Level2": {
        "prefix": "note2",
		"body": [
			"#\t\t-> $0",
		],
	}

	"Note_Level3": {
        "prefix": "note3",
		"body": [
			"#\t\t\t-> $0",
		],
	}

	"Make New Block": {
        "prefix": "nb",
		"body": [
			"# %%",
		],
	}
}