{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.

	// This JSON code snippet for csharp is mainly aimed at making useful comment blocks
	"SectionTitle": {
        "prefix": "header",
		"body": [
			"//=======================================================",
			"// $0",
			"//======================================================="
		],
		"description": "Header for a section in a tex file"
    },
    
    "Author": {
		"prefix": "author",
		"body": [
			"// Jonathan Liaw",
			"// Email: j-liaw@hotmail.com"
		],
		"description": "Author information"
    },
    
    "Date": {
		"prefix": "date",
		"body": [
			"// |Date: ${CURRENT_MONTH}.${CURRENT_DATE}.${CURRENT_YEAR}|"
		],
		"description": "Enter date of your own format. Preference: MMM-DD-YYYY"
	},

	"NoteLevel1": {
        "prefix": "note1",
		"body": [
			"//-> $0"
		],
		"description": "Comment note level 1"
	},

	"NoteLevel2": {
        "prefix": "note2",
		"body": [
			"//\t-> $0"
		],
		"description": "Comment note level 2"
	},

	"StandardImport": {
		"prefix": "go",
		"body": [
			"#include <iostream>",
			"using namespace std;", 
			"#include <string>", 
			"#include <vector>", 
			"\nint main()\n{}"
		],
		"description": "Standard imports and header for C++ files"
	}
}